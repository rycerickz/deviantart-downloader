<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane minWidth="1000.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.rycerickz.deviantartdownloader.MainController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar prefWidth="1000.0">
                    <menus>
                        <Menu mnemonicParsing="false" text="Archivo">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Salir" onAction="#actionMenuClose"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Ayuda">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Acerca de"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="0.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="495.33333333333326" minWidth="10.0"
                                           prefWidth="372.00000190734863"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="248.33334350585938" minWidth="10.0"
                                           prefWidth="230.33334350585938"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Client id" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="textFieldClientId" prefWidth="600.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="0"/>
                        <Label text="Client secret" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="textFieldClientSecret" prefWidth="600.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"/>
                        <Label text="Usuario" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="textFieldUser" prefWidth="600.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"/>
                        <Button fx:id="buttonScan" mnemonicParsing="false" onAction="#actionScan" text="Escanear"
                                GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </GridPane>
            </children>
        </VBox>
    </top>
    <center>
        <fx:include fx:id="tabPaneUsers" source="application_tab_pane_users.fxml"/>
    </center>
</BorderPane>
